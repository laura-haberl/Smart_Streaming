generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model User {
  id                                String @id @default(auto()) @map("_id") @db.ObjectId
  email                             String @unique
  name                              String
  password                          String
  genres                            String[]
  platforms                         String[]
  primaryLanguage                   String?
  secondaryLanguage                 String?
  ageRestriction                    String?
  fskRating                         String?
  initialInteractionCompleted       Boolean     @default(false)
  createdAt                         DateTime    @default(now())
  updatedAt                         DateTime    @updatedAt
}
